<UserControl
    x:Class="RSSAgregator.RSSItemUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSSAgregator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TextBlockTitle" Text="This is where the title goes"></TextBlock>
            <TextBlock x:Name="TextBlockDescription" Text="Here goes the description"></TextBlock>
            <TextBlock x:Name="TextBlockCategory" Text="Category"></TextBlock>
            <TextBlock x:Name="TextBlockPubDate" Text="Pub Date"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
