<Page
    x:Class="RSSAgregator.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSSAgregator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="About" FontSize="43"></TextBlock>
            <TextBlock Text="Developed by johnnymaikeo@gmail.com"></TextBlock>
            <TextBlock Text="https://gothub.com/johnnymaikeo/RSSAgregator"></TextBlock>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Back" x:Name="AppBarButtonBack" Click="AppBarButtonBack_Click"></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
